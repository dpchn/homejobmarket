<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.hm.app.model.Job" table="job">
		<id name="id" type="int">
			<column name="jobId" />
			<generator class="increment" />
		</id>
		<property name="jobTitle" type="string">
			<column name="job_title" />
		</property>
		<property name="jobDes" type="string">
			<column name="job_des" />
		</property>
		<property name="startDate" type="timestamp">
			<column name="start_date" />
		</property>
		
		<property name="endDate" type="timestamp">
			<column name="end_date" />
		</property>
		
		<property name="payPerHour">
			<column name="pay_per_hour" />
		</property>
		
		<property name="temporaryActive">
			<column name="t_active" />
		</property>
		
		<many-to-one name="postedBy" class="com.hm.app.model.User" column="posted_by" cascade="all" />
   		
   		<set name= "applications" table="application" cascade="all" lazy = "false" inverse="true">
			<key column="job_id"></key>
			<one-to-many class="com.hm.app.model.Application"/>
		</set>
	</class>
</hibernate-mapping>